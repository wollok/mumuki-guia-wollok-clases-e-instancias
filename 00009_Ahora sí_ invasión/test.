
	test "Inicialmente la invasion tiene tama침o 1" {
		assert.equals(1, invasion.tamanio())
	}
	
	test "Luego de crecer dos veces la invasi칩n tiene tama침o 36" {
		invasion.crecer()
		invasion.crecer()
		assert.equals(36, invasion.tamanio())
	}

	test "Luego de crecer, todos los caminantes tienen 100 de salud" {
		invasion.crecer()
		assert.that(invasion.caminantes().all({ caminante => caminante.salud() == 100}))
	}

	test "Si la invasi칩n tiene caminantes sin vida, estos no se consideran para crecer" {
		invasion.caminantes().add(new Zombi(salud = 0))
		invasion.crecer()
		assert.equals(6, invasion.tamanio())
	}